# Description:
# 	Runs the song-client
#

# Do Java check

if type -p java 1>/dev/null; then
#    echo Found Java in PATH
    _java=java
elif [[ -n "$JAVA_HOME" ]] && [[ -x "$JAVA_HOME/bin/java" ]];  then
#    echo Found Java in JAVA_HOME
    _java="$JAVA_HOME/bin/java"
else
    echo "Java not found. Sing requires JDK 1.8"
    exit 1
fi

if [[ "$_java" ]]; then
    version=$("$_java" -version 2>&1 | awk -F '"' '/version/ {print $2}')
    regex="^1[1-9][\.]{0,1}"
    if [[ ! $version =~ $regex ]]; then 
        echo Java 11 required for swear_detector. Current version is $version
        exit 1
    fi
fi

current_dir=$PWD
fn=$0
program_home=$current_dir/`dirname $fn`/../

		 #-Dlog.name=song \
		 #-Dlog.path=$program_home/logs \
		 #-Dlogback.configurationFile=$program_home/conf/logback.xml \
         #"$program_home/conf/application.yml" \
java --illegal-access=deny \
         -jar $program_home/lib/swear-detector.jar \
         "$@"
